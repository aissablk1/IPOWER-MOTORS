      "Namespace": "AWS/EC2",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 2,
      "Threshold": 85,
      "ComparisonOperator": "GreaterThanThreshold",
      "AlarmActions": ["arn:aws:sns:eu-west-3:ACCOUNT_ID:ipower-motors-alerts"],
      "OKActions": ["arn:aws:sns:eu-west-3:ACCOUNT_ID:ipower-motors-alerts"]
    },
    {
      "AlarmName": "IPOWER-MOTORS-RDS-CPU-High",

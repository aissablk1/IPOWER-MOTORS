{
  "Alarms": [
    {
      "AlarmName": "IPOWER-MOTORS-EC2-CPU-High",
      "AlarmDescription": "CPU utilisation élevée sur l'instance EC2",
      "MetricName": "CPUUtilization",
      "Namespace": "AWS/EC2",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 2,
      "Threshold": 80,
      "ComparisonOperator": "GreaterThanThreshold",
      "AlarmActions": ["arn:aws:sns:eu-west-3:ACCOUNT_ID:ipower-motors-alerts"],
      "OKActions": ["arn:aws:sns:eu-west-3:ACCOUNT_ID:ipower-motors-alerts"]
    },
    {
      "AlarmName": "IPOWER-MOTORS-EC2-Memory-High",
      "AlarmDescription": "Utilisation mémoire élevée sur l'instance EC2",

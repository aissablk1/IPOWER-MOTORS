# Configuration Terraform pour IPOWER MOTORS
# Copier ce fichier vers terraform.tfvars et remplir les valeurs

# Région AWS
aws_region = "eu-west-3"

# Environnement
environment = "production"

# Domaine principal
domain = "ipowerfrance.fr"

# Type d'instance EC2
instance_type = "t3.medium"

# Configuration base de données
database_instance_class = "db.t3.micro"
database_name = "ipower_motors"
database_username = "ipower_admin"
database_password = "VOTRE_MOT_DE_PASSE_SECURISE"

# Certificat SSL (optionnel)
ssl_certificate_arn = ""

# Configuration réseau
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.3.0/24", "10.0.4.0/24"]

# Configuration S3
frontend_bucket_name = "ipower-motors-frontend"
documents_bucket_name = "ipower-motors-documents"
backups_bucket_name = "ipower-motors-backups"

# Configuration CloudFront
cloudfront_price_class = "PriceClass_100" # Europe, Amérique du Nord, Asie

# Configuration monitoring
enable_cloudwatch_logs = true
enable_cloudwatch_alarms = true
retention_days = 30

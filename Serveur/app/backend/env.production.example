# Configuration de production pour le backend IPOWER MOTORS
# Copier vers .env.production et remplir les vraies valeurs

# Configuration du serveur
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Base de données PostgreSQL (AWS RDS)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/ipower_motors
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Cache Redis (AWS ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint:6379
REDIS_PASSWORD=your_redis_password

# Stockage S3
AWS_REGION=eu-west-3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=ipower-motors-documents
S3_BUCKET_REGION=eu-west-3

# JWT et sécurité
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://ipowerfrance.fr,https://www.ipowerfrance.fr
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (AWS SES)
SMTP_HOST=email-smtp.eu-west-3.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_ses_username
SMTP_PASS=your_ses_password
EMAIL_FROM=noreply@ipowerfrance.fr

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
METRICS_PORT=9090

# Sécurité
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
TRUST_PROXY=true

# Fonctionnalités
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# URLs de l'application
FRONTEND_URL=https://ipowerfrance.fr
ADMIN_URL=https://admin.ipowerfrance.fr
API_URL=https://api.ipowerfrance.fr

# Configuration des sessions
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
